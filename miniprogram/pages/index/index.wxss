page {
  background-color: #1a1a1a;
  color: #ffffff;
}

.container {
  padding: 20rpx;
}

.search-bar {
  padding: 20rpx 0;
}

.search-input {
  background-color: #2a2a2a;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  color: #ffffff;
  font-size: 28rpx;
}

.search-input::placeholder {
  color: #666666;
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 20rpx;
  border-bottom: 1px solid #333333;
  margin-bottom: 20rpx;
}

.gym-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #f5a623;
}

.card-count {
  font-size: 24rpx;
  color: #888888;
}

.card-item {
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

.card-item.disabled {
  opacity: 0.5;
}

.card-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg, #f5a623 0%, #d48806 100%);
}

.card-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-owner {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
}

.card-price {
  font-size: 28rpx;
  color: #f5a623;
}

.card-usage {
  font-size: 26rpx;
  color: #cccccc;
}

.card-expiry {
  font-size: 26rpx;
  color: #888888;
}

.card-tags {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.tag.expiring {
  background-color: rgba(245, 166, 35, 0.2);
  color: #f5a623;
}

.tag.expired {
  background-color: rgba(244, 67, 54, 0.2);
  color: #f44336;
}

.tag.exhausted {
  background-color: rgba(158, 158, 158, 0.2);
  color: #9e9e9e;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #666666;
}
