page {
  background-color: #1a1a1a;
  color: #ffffff;
}

.container {
  padding: 20rpx;
}

.gym-summary {
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
}

.gym-summary-text {
  font-size: 26rpx;
  color: #cccccc;
  line-height: 1.6;
}

.picker-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #ffffff;
}

.picker-arrow {
  font-size: 24rpx;
  color: #888888;
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 20rpx;
  border-bottom: 1px solid #333333;
  margin-bottom: 20rpx;
}

.gym-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #f5a623;
}

.card-count {
  font-size: 24rpx;
  color: #888888;
}

.card-item {
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

.card-item.disabled {
  opacity: 0.5;
}

.card-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg, #f5a623 0%, #d48806 100%);
}

.card-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-owner {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
}

.card-price {
  font-size: 28rpx;
  color: #f5a623;
}

.card-usage {
  font-size: 26rpx;
  color: #cccccc;
}

.card-expiry {
  font-size: 26rpx;
  color: #888888;
}

.card-tags {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.tag.not-opened {
  background-color: rgba(33, 150, 243, 0.2);
  color: #2196f3;
}

.tag.expiring {
  background-color: rgba(245, 166, 35, 0.2);
  color: #f5a623;
}

.tag.expired {
  background-color: rgba(244, 67, 54, 0.2);
  color: #f44336;
}

.tag.exhausted {
  background-color: rgba(158, 158, 158, 0.2);
  color: #9e9e9e;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #666666;
}

.gym-tabs {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, #2a2a2a 0%, #1a1a1a 100%);
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #333333;
  z-index: 100;
}

.tabs-scroll {
  width: 100%;
  white-space: nowrap;
}

.tabs-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #2a2a2a 0%, #3a3a3a 100%);
  border-radius: 15rpx;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  min-width: 120rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item:last-child {
  margin-right: 0;
}

.tab-item.active {
  border-color: #f5a623;
  background: linear-gradient(135deg, #3a2a2a 0%, #4a3a3a 100%);
}

.tab-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.tab-count {
  font-size: 22rpx;
  color: #888888;
}

.tab-item.active .tab-count {
  color: #f5a623;
}
