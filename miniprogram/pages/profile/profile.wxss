page {
  background-color: #1a1a1a;
  color: #ffffff;
}

.container {
  padding: 30rpx;
}

.user-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #2a2a2a;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f5a623 0%, #d48806 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.btn-switch {
  background-color: #3a3a3a;
  color: #f5a623;
  font-size: 26rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  border: none;
}

.btn-switch::after {
  border: none;
}

.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.picker-content {
  background-color: #2a2a2a;
  border-radius: 20rpx;
  width: 600rpx;
  max-height: 70vh;
  overflow: hidden;
}

.picker-header {
  background: linear-gradient(135deg, #f5a623 0%, #d48806 100%);
  color: #1a1a1a;
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  text-align: center;
}

.user-list {
  max-height: 400rpx;
  padding: 20rpx;
}

.user-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #3a3a3a;
}

.user-option:last-child {
  border-bottom: none;
}

.user-option.active {
  background-color: rgba(245, 166, 35, 0.1);
}

.user-option text:first-child {
  font-size: 30rpx;
  color: #ffffff;
}

.user-role {
  font-size: 24rpx;
  color: #888888;
}

.btn-add-user {
  background-color: #3a3a3a;
  color: #f5a623;
  font-size: 28rpx;
  padding: 24rpx;
  border: none;
  border-top: 1px solid #3a3a3a;
  border-radius: 0;
}

.btn-add-user::after {
  border: none;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1001;
}

.modal-content {
  background-color: #2a2a2a;
  border-radius: 20rpx;
  width: 500rpx;
  overflow: hidden;
}

.modal-header {
  background: linear-gradient(135deg, #f5a623 0%, #d48806 100%);
  color: #1a1a1a;
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  text-align: center;
}

.modal-body {
  padding: 30rpx;
}

.modal-input {
  background-color: #3a3a3a;
  border-radius: 12rpx;
  padding: 24rpx;
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
}

.modal-footer {
  display: flex;
  border-top: 1px solid #3a3a3a;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 100rpx;
  border: none;
  border-radius: 0;
  font-size: 30rpx;
}

.btn-cancel {
  background-color: transparent;
  color: #888888;
  border-right: 1px solid #3a3a3a;
}

.btn-cancel::after {
  border: none;
}

.btn-confirm {
  background-color: transparent;
  color: #f5a623;
}

.btn-confirm::after {
  border: none;
}

.tab-bar {
  display: flex;
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #888888;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.tab-item.active {
  background-color: #f5a623;
  color: #1a1a1a;
  font-weight: bold;
}

.tab-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.my-card-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 30rpx;
}

.my-card-main {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.my-card-gym {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
}

.my-card-count {
  font-size: 26rpx;
  color: #4caf50;
}

.my-card-price {
  font-size: 28rpx;
  color: #f5a623;
}

.usage-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 30rpx;
}

.usage-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.usage-gym {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
}

.usage-date {
  font-size: 24rpx;
  color: #888888;
}

.usage-right {
  text-align: right;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.usage-times {
  font-size: 28rpx;
  color: #f44336;
}

.usage-card-owner {
  font-size: 24rpx;
  color: #888888;
}

.empty-tab {
  text-align: center;
  padding: 80rpx 0;
  color: #666666;
}
