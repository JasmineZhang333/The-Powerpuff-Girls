page {
  background-color: #f5f5f5;
  color: #333;
}

.container {
  padding: 20rpx;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.count {
  font-size: 26rpx;
  color: #999;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-group.half {
  flex: 1;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
}

.btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #f5a623 0%, #d48806 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin-top: 20rpx;
}

.btn::after {
  border: none;
}

.action-list {
  display: flex;
  flex-direction: column;
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #eee;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item.danger .action-name {
  color: #f44336;
}

.action-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.action-name {
  font-size: 28rpx;
  color: #333;
}

.action-desc {
  font-size: 24rpx;
  color: #999;
}

.action-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.card-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.card-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.card-main {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.card-gym {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.card-owner {
  font-size: 24rpx;
  color: #666;
}

.card-times {
  font-size: 24rpx;
  color: #4caf50;
}

.card-actions {
  display: flex;
  gap: 12rpx;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  background-color: #f5a623;
  color: #fff;
  border: none;
}

.btn-small.danger {
  background-color: #f44336;
}

.btn-small::after {
  border: none;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
